#connect-modal.modal.fade
  form#connect-form

    .modal-header
      h3 Connect
    
    .modal-body
      input#host.span4(type="text", placeholder="Host", value="db.vsjs.mdcn.mobi")
      input#port.span4(type="text", placeholder="Port", value="27017")
      input#database.span4(type="text", placeholder="Database", value="squid")

    .modal-footer
      input.btn.btn-primary(type="submit", value="Connect")
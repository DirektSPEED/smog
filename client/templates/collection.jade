.well
  .page-header: h1 #{name}

  table#datagrid.table.table-striped.table-bordered(cellpadding="0", cellspacing="0", border="0")
    thead
      tr
        th ID
        th Document
        th Actions
    tbody
      - if(documents)
        each document in documents
          tr
            td #{document.id}
            td.editable_textarea(id="#{document.id}") #{document.value}
            td
              a(href="#/delete/#{name}/#{document.id}", rel="tooltip", title="Delete")
                i.icon-trash